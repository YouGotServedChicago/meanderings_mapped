  <form class="form-horizontal">
    <div class="form-group">
      <label for="register_name" class="col-sm-1 control-label">Name</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" id="register_name" placeholder="Name">
      </div>
    </div>
    <div class="form-group">
      <label for="birthday" class="col-sm-1 control-label">Date of Birth</label>
      <div class="col-sm-3">
        <input type="date" class="form-control" id="date_of_birth" placeholder="Date of Birth">
      </div>
    </div>
    <div class="form-group">
      <label for="location" class="col-sm-1 control-label">Lives in</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" id="location" placeholder="City Name">
      </div>
    </div>
    <div class="form-group">
      <label for="bio" class="col-sm-1 control-label">Biography</label>
        <div class="col-sm-3">
          <textarea class="form-control" rows="6" placeholder="Bio Info"></textarea>
        </div>
      </div>
        <div class="form-group">
          <label for="exampleInputFile" class="col-sm-1 control-label">Image upload</label>
            <div class="col-sm-3">
            <input type="file" id="profile_pic">
          </div>
          <p class="help-block">Select & upload profile picture</p>
        </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Create Profile</button>
      </div>
    </div>
  </form>


